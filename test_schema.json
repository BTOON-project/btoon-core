{
  "name": "UserProfile",
  "version": {
    "major": 1,
    "minor": 0,
    "patch": 0
  },
  "description": "User profile schema for the application",
  "fields": [
    {
      "name": "id",
      "type": "uint",
      "required": true,
      "description": "Unique user identifier"
    },
    {
      "name": "username",
      "type": "string",
      "required": true,
      "description": "User's unique username",
      "constraints": {
        "minLength": 3,
        "maxLength": 20,
        "pattern": "^[a-zA-Z0-9_]+$"
      }
    },
    {
      "name": "email",
      "type": "string",
      "required": true,
      "description": "User's email address"
    },
    {
      "name": "age",
      "type": "int",
      "required": false,
      "description": "User's age",
      "constraints": {
        "min": 0,
        "max": 150
      }
    },
    {
      "name": "bio",
      "type": "string",
      "required": false,
      "description": "User biography",
      "default": "",
      "constraints": {
        "maxLength": 500
      }
    },
    {
      "name": "created_at",
      "type": "timestamp",
      "required": true,
      "description": "Account creation timestamp"
    }
  ],
  "evolution_strategy": "BACKWARD_COMPATIBLE"
}
